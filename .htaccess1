php_value session.cookie_lifetime 1800
php_value session.gc_maxlifetime 1800
RewriteEngine On
RewriteCond %{SERVER_PORT} 80
RewriteRule ^(.*)$ https://carpass.gr/$1 [R,L]



RewriteEngine On
RewriteCond %{HTTP_HOST} ^carpass\.gr [NC]
RewriteCond %{SERVER_PORT} 80
RewriteRule ^(.*)$ https://www.carpass.gr/$1 [R,L]

RewriteCond %{HTTP_REFERER} !^http://carpass.gr/.*$      [NC]
RewriteCond %{HTTP_REFERER} !^http://carpass.gr$      [NC]
RewriteCond %{HTTP_REFERER} !^http://www.carpass.gr/.*$      [NC]
RewriteCond %{HTTP_REFERER} !^http://www.carpass.gr$      [NC]
RewriteCond %{HTTP_REFERER} !^https://carpass.gr/.*$      [NC]
RewriteCond %{HTTP_REFERER} !^https://carpass.gr$      [NC]
RewriteCond %{HTTP_REFERER} !^https://www.carpass.gr/.*$      [NC]
RewriteCond %{HTTP_REFERER} !^https://www.carpass.gr$      [NC]
RewriteRule .*\.(jpg|jpeg|gif|png|bmp)$ - [F,NC]
